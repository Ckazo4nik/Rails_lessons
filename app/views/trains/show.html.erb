<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>Маршрут:</strong>
  <% if @train.route.present? %>
       <%= @train.route.name %>
  <% else %>
    Не вказано
  <% end %>

</p>
<p>
  <strong>Список вагонів у поїзда:</strong>
  <% if @train.cars.present?%>
      <% @train.cars.each do |cars|%>
         <tr>
           <br><strong>____Вагон____</strong>
           <td>
          <p>Верхніх місць</p>
          <%= cars.up_place_count %>
          </td>
          <td>
            <p>Нижніх місць</p>
            <%= cars.down_place_count %>
          </td>
         </tr>
    <% end %>
<% else %>
    Поїздів немає
<% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
